@model TodoServer.Models.Account.RegisterViewModel
<div class="box">

    <h2 class="header">Zarejestruj się</h2>

    <form asp-route-returnUrl="@ViewData["returnUrl"]" asp-action="Register" asp-controller="Account" method="post">



        <div asp-validation-summary="All"></div>


        <input asp-for="Email" class="input-field" placeholder="Email" />

        <input asp-for="Password" class="input-field" placeholder="Hasło" />

        <input asp-for="ConfirmPassword" class="input-field" placeholder="Powtierdź hasło" />


        <button type="submit" class="button">Zarejestruj się</button>

    </form>

    <a asp-action="Login" asp-controller="Account">Zaloguj się.</a>

</div>

